<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-4 login-sec">
        <img class="login-sec-logo" src="<%= asset_path( 'logo.jpg' ) %>" >
        <h2> Nueva cuenta</h2>

        <div class="field">
          <%= f.label :first_name, "Nombre(s)" %><br />
          <%= f.text_field :first_name, :class => "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :last_name, "Apellidos" %><br />
          <%= f.text_field :last_name, :class => "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :email, "Correo electrónico" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %>
          <% if @minimum_password_length %>
          <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :class => "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmación de contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control"  %>
        </div>

        <div class="actions">
          <%= f.submit "Crear cuenta", :class => "btn btn-light"%>
        </div>
        <%= render "devise/shared/links" %>
      </div>

      <div class="col-md-8 login-sec-userable">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :userable_type, "Tipo de usuario" %><br />
          <%= f.select :userable_type, userable_type_options(), {}, { :class => "form-control",
                                                                      :id => "userable-type-registration",
                                                                      :onchange => "manageUserableTypeRegistration()" }  %>
        </div>

        <div class="field">
          <%= f.label :institution_id, "Institución" %><br />
          <%= f.select :institution_id, institution_options(), {}, :class => "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :edition_id, "Edición" %><br />
          <%= f.select :edition_id, edition_options(), {}, :class => "form-control"  %>
        </div>

        <div id='judge-registration'>
          <%= render "devise/registrations/userable/judge" %>
        </div>

        <div id='professor-registration'>
          <%= render "devise/registrations/userable/professor" %>
        </div>

        <div id='student-registration'>
          <%= render "devise/registrations/userable/student" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
