<div class="container">
  
  <div class="row">
    <div class="col-md-12">
      <h2>Cambio de contraseña</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="row">
     
      <div class="col-md-4">
        <div class="field">
          <%= f.label :password, "Contraseña nueva" %>
          <% if @minimum_password_length %>
            <em> (Mínimo <%= @minimum_password_length %> caracteres)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => "form-control"%>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= f.label :password_confirmation, "Confirmación de contraseña" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %> 
        </div>
      </div>
      
    </div>
    
    <div class="row">
      <div class="col-md-12">
        <div class="actions">
          <%= f.submit "Cambiar mi contraseña", :class => "btn btn-light" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>

    
  <% end %>


</div>