<div class="container">
  <div class="row">
    <div class="col-md-4 login-sec">
      <img class="login-sec-logo" src="<%= asset_path( 'logo.jpg' ) %>" >
       
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Correo electrónico" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
        </div>

        <div class="actions" >
          <%= f.submit "Iniciar sesión", :class => "btn btn-light" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      <br>
      <p  id="alertnotice" > <%= alert %> </p>
      <p  id="alertnotice"> <%= notice %> </p>
    </div>
    <div class="col-md-8 banner-sec">
      <%= render 'devise/shared/carousel' %>
    </div>
  </div>
</div>
