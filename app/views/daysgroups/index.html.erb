<p id="notice"><%= notice %></p>

<h1>Daysgroups</h1>

<table>
  <thead>
    <tr>
      <th>Day-Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daysgroups.each do |daysgroup| %>
      <tr>
        <td><%= daysgroup.group %></td>
        <td><%= link_to 'Show', daysgroup %></td>
        <td><%= link_to 'Edit', edit_daysgroup_path(daysgroup) %></td>
        <td><%= link_to 'Destroy', daysgroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daysgroup', new_daysgroup_path %>
