<div class="content">
  <h1>Ediciones</h1>
  <%  if !get_current_edition_id %>
      <h6>Ninguna edición llevandose a cabo</h6>
  <% else %>
      <h6> Edición actual: <%= Edition.find(get_current_edition_id).name %></h6>
  <% end %>
   <br>

  <table class="table table-borderless" >
    <thead class="thead-light" >
      <tr>
        <th>Nombre</th>
        <th>Fecha de inicio</th>
        <th>Fecha de termino</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @editions.each do |edition| %>
        <tr>
          <td><%= edition.name%></td>
          <td><%= edition.start_date%></td>
          <td><%= edition.end_date%></td>
          <td><%= link_to 'Editar', edit_edition_path(edition) ,:class => "btn btn-light"%></td>
          <td><%= link_to 'Eliminar', edition, method: :delete, data: { confirm: 'Estas seguro?' } ,:class => "btn btn-light"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Edicion', new_edition_path,:class => "btn btn-light" %>
</div>

