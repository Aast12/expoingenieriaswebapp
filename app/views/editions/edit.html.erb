<div class="content">
    <h1>Editar Edicion</h1>
    <h4>Fases actuales: <h4>
    <ul class="no-bullets">
        <% phases = get_current_phase(@edition) %>
        <% for phase in phases%>
        <li> <%= phase.name %> </li>
        <%end%>
    </ul>
    <br>
    <%= render 'form', edition: @edition %>
    <%= link_to 'Regresar', editions_path ,:class => "btn btn-light" %>
</div>    
<style>
ul.no-bullets {
  list-style-type: none; /* Remove bullets */
  padding: 0; /* Remove padding */
  margin: 0; /* Remove margins */
}
</style>

