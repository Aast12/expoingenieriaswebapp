<div class="nested-fields">
  <div class="time-limit">
    <div class="time-limit-field">
      <div class="field">
        <%= time_limit_form.select :name, time_limits_names(), {}, :class => "form-control" %>
      </div>
    </div>
    <div class="time-limit-field">
      <div class=" field">
        <%= time_limit_form.label :start_date , "Fecha de inicio", :class => "form-label" %>
        <%= time_limit_form.date_select :start_date, :class => "form-control" %>
      </div>
    </div>
    <div class="time-limit-field">
      <div class="field">
        <%= time_limit_form.label :end_date, "Fecha de termino", :class => "form-label" %>
        <%= time_limit_form.date_select :end_date, :class => "form-control" %>
      </div>
    </div>
    <div class="time-limit-field">
      <%= link_to_remove_association "Eliminar subfase", time_limit_form %>
    </div>
  </div>
</div>
