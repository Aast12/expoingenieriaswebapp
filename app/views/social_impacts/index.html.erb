<h1>Social Impacts</h1>

<table>
  <thead>
    <tr>
      <th>Problem</th>
      <th>Empathy</th>
      <th>Responsibility</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @social_impacts.each do |social_impact| %>
      <tr>
        <td><%= social_impact.problem %></td>
        <td><%= social_impact.empathy %></td>
        <td><%= social_impact.responsibility %></td>
        <td><%= social_impact.project_id %></td>
        <td><%= link_to 'Show', social_impact %></td>
        <td><%= link_to 'Edit', edit_social_impact_path(social_impact) %></td>
        <td><%= link_to 'Destroy', social_impact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Social Impact', new_social_impact_path %>
