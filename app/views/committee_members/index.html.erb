<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<div class="content">
<div class="user-header text-primary">
  <h1 class="border-bottom-0">Miembros de comité</h1>
</div>
<table class="table table-borderless">
  <thead class="thead-light">
    <tr>
      <th>Nombre</th>
      <th>Correo Electronico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committee_members.each do |committee_member| %>
      <% if committee_member.active and committee_member.has_user? %>
        <tr>
          <td><%= committee_member.get_user.full_name %></td>
          <td><%= committee_member.get_user.email %></td>
          <td class="td-see-user"><%= link_to 'Ver miembro de comité', committee_member, :class => "btn btn-info" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
