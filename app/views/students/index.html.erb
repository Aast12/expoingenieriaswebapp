<div class="content">
  <h1>Alumnos</h1>

<table class="table table-borderless">
  <thead class="thead-light">
    <tr>
      <th>Carrera</th>
      <th>Matricula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.major %></td>
        <td><%= student.student_code %></td>
        <td><%= link_to 'Editar', edit_student_path(student), :class => "btn btn-light"%></td>
        <td><%= link_to 'Eliminar', student, method: :delete, data: { confirm: 'Â¿Estas seguro?'}, :class => "btn btn-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
