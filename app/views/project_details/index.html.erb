<h1>Project Details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Video url</th>
      <th>Semestre i</th>
      <th>Social impact</th>
      <th>Client type</th>
      <th>Project</th>
      <th>Category</th>
      <th>Area</th>
      <th>Type of</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_details.each do |project_detail| %>
      <tr>
        <td><%= project_detail.name %></td>
        <td><%= project_detail.description %></td>
        <td><%= project_detail.video_url %></td>
        <td><%= project_detail.semestre_i %></td>
        <td><%= project_detail.social_impact %></td>
        <td><%= project_detail.client_type %></td>
        <td><%= project_detail.project_id %></td>
        <td><%= project_detail.category %></td>
        <td><%= project_detail.area %></td>
        <td><%= project_detail.type_of %></td>
        <td><%= link_to 'Show', project_detail %></td>
        <td><%= link_to 'Edit', edit_project_detail_path(project_detail) %></td>
        <td><%= link_to 'Destroy', project_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

